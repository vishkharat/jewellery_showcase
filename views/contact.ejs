<div class="container">
    <h1>Contact Us</h1>
    <form id = "contactForm" action="/contact" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="mobile">Mobile Number</label>
            <input type="text" class="form-control" id="mobile" name="mobile" required>
        </div>        
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="message">Message</label>
            <input type="text" class="form-control" id="message" name="message"  required>
        </div>
        <div class="form-group">
            <label for="requirement">Requirement</label>
            <textarea class="form-control" id="requirement" name="requirement" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3" >Submit</button>
    </form>
    <div id="successMessage" style="display: none;" class="mt-3 alert alert-success">
        Your message has been sent successfully.
    </div>
    <div id="errorMessage" style="display: none;" class="mt-3 alert alert-danger">
        Oops! Something went wrong. Please try again later.
    </div>
</div>
