<% if(designs != null ) { %>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- designs.name %></li>
      </ol>
    </nav>
  
  
    <div class="row">
  
      <div class="col-12 col-md-4">
        <img src="/uploads/<%- designs.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- designs.name %>" loading="lazy">
      </div>
  
      <div class="col-12 col-md-8">
        <div class="row">
          <div class="col-12"><h1><%- designs.name %></h1></div>
          <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- designs.category %></div>
          <div class="col-12" style="white-space: pre-line;">
            <h4>Buy Something New Everyday</h4>
            <%- designs.weight %>
          </div>
        </div>
  
        <div class="row pt-4">
          <div class="col-12">
            <h4>material</h4>
            <ul class="list-group list-group-flush">
              <% designs.material.forEach(function(material, index){ %>
                <li class="list-group-item"><%= material %></li>
              <% }) %>
            </ul> 
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <p>No item found.</p>
  <% } %>